{
  "parser": "babel-eslint",
  "extends": [
    "airbnb"
  ],
  "env": {
    "browser": true
  },
  "globals" : {
    "__NODE_ENV__": false,
    "__DEV__": false,
    "__PROD__": false,
    "__TEST__": false,
    "__DEBUG__": false,
    "__BASENAME__": false,
    "describe": false,
    "it": false,
    "expect": false
  },
  "rules": {
    "import/no-unresolved": "off",
    "no-underscore-dangle": "off",
    "react/prefer-stateless-function": "off"
  }
}