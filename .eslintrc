{
  "parser": "babel-eslint",
  "extends": [
    "airbnb"
  ],
  "plugins": [
    "react"
  ],
  "env": {
    "browser": true
  },
  "globals" : {
    "__NODE_ENV__": false,
    "__DEV__": false,
    "__PROD__": false,
    "__TEST__": false,
    "__DEBUG__": false,
    "__BASENAME__": false
  },
  "rules": {
    "import/no-unresolved": "off",
    "no-underscore-dangle": "off",
    "react/prefer-stateless-function": "off",
    "react/sort-prop-types": 2,
    "react/wrap-multilines": 2
  }
}