$pui--button__size = 0.75em

.pui--button
  $border-width = 0.166em
  $border-radius = 0.333em
  position: relative
  min-width: 16em
  padding-left: 4em
  padding-right: 4em
  padding-top: 1.25em
  padding-bottom: 1.25em
  font-size: $pui--button__size
  letter-spacing: 0.1em
  text-transform: uppercase
  border-width: $border-width
  border-style: solid
  border-radius: $border-radius
  color: white
  background-color: $highlight-color
  border-color: $highlight-color
  cursor: pointer
  user-select: none

  &:after
    content: ''
    position: absolute
    left: -($border-width)
    top: -($border-width)
    width: 'calc(100% + %s)' % ($border-width * 2)
    height: 'calc(100% + %s)' % ($border-width * 2)
    background-color: alpha(black, 0.075)
    border-radius: $border-radius

    transition: opacity .1s ease
    opacity: 0

  &:focus
    outline: none
    box-shadow: 0 10px 25px 0 alpha($dark-blue-a, 0.15)

  &:hover:after
    opacity: 1

  &:active
    box-shadow: 0 7px 20px 0 alpha($dark-blue-a, 0.17)

    &:after
      background-color: alpha(black, 0.15)
      opacity: 1

.pui--button.big
  font-size: $pui--button__size * 1.25
  text-transform: none

.pui--button.fluid
  width: 100%

.pui--button.ghost
  color: $dark-blue-a
  background-color: transparent
  border-color: $light-gray-b

  &:after
    background-color: alpha(black, 0.035)

  &:active:after
    background-color: alpha(black, 0.055)

.pui--button.rounded
  $border-radius = 5em
  border-radius: $border-radius

  &:after
    border-radius: $border-radius

.pui--button.thin
  padding-top: .75em
  padding-bottom: .75em
