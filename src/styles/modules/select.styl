.pui--select
  position: relative
  cursor: pointer

  &.fluid .input
    width: 100%

  &.focusing .input .container
    box-shadow: 0 10px 25px 0 alpha($dark-blue-a, 0.15)

  &.selecting .input .container
    position: absolute
    width: 100%
    box-shadow: 0 30px 40px 0 alpha($dark-blue-b, 0.2)

  .input
    height: 3.3125em
    line-height: 1.2

    .container
      background-color: white
      border: 1px solid $light-gray-b
      border-radius: 4px

  .display
    padding: 1em

  .placeholder
    color: $dark-gray-a

  .label
    size = .85em
    display: block
    margin-bottom: .4em
    font-size: size
    color: $dark-gray-a
    text-transform: uppercase
    letter-spacing: size * .2

  input
    position: absolute
    width: 0
    height: 0
    opacity: 0

  .menu
    padding: 0
    margin: 0
    list-style: none

.pui--select__option
  padding: .75em 1em

  &:hover
    background-color: $light-gray-a

  &.active
    background-color: $light-gray-a