.pui--input
  @extends $inputs-container
  position: relative
  display: flex
  align-items: center
  padding: 0 1em

  &.focusing
    @extends $inputs-focus

    input
      outline: none

  &.fluid
    @extends $inputs-fluid

  &.error
    @extends $inputs-error

  input, .dummy
    flex: 1
    height: 100%
    min-width: 0
    padding: 1em 0
    border-width: 0

    &::placeholder, .placeholder
      @extends $inputs-placeholder
      opacity: 1

  .dummy
    min-height: 3.188em

  .icon
    width: 1em
    margin-right: .8em
    color: $dark-gray-a

.pui--input--date
  cursor: pointer

  &.show .calendar
    transform: scale(1)
    opacity: 1

  .calendar
    position: absolute
    left: 0
    top: 100%

    transition: transform .2s ease, opacity .2s ease
    transform: scale(0)
    opacity: 0
