.pui--input
  @extends $inputs-container
  display: flex
  align-items: center
  padding: 0 1em

  &.focusing
    @extends $inputs-focus

    input
      outline: none

  &.fluid
    @extends $inputs-fluid

  &.error input
    @extends $inputs-error

  input
    flex: 1
    height: 100%
    padding: 1em 0
    border-width: 0

    &::placeholder
      @extends $inputs-placeholder
      opacity: 1

  .icon
    width: 1em
    margin-right: .8em
    color: $dark-gray-a
