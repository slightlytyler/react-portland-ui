.pui--input
  &.responsive .input
    width: 100%

  &.error
    $error-color = $red-a

    .input
      border-color: $error-color

    .label
      color: $error-color

  .input
    padding: 1em
    border: 1px solid $light-gray-b
    border-radius: 4px

    &::placeholder
      color: $dark-gray-a
      opacity: 1

    &:focus
      outline: none
      box-shadow: 0 10px 25px 0 alpha($dark-blue-a, 0.15)

  .label
    size = .85em
    margin-bottom: .4em
    font-size: size
    color: $dark-gray-a

    .body
      text-transform: uppercase
      letter-spacing: size * .2

    .message
      &:before
        content: "\00a0 "