.pui--input
  @extends $inputs-container
  position: relative
  display: flex
  align-items: center
  padding: 0 1em

  &.focusing
    @extends $inputs-focus

    input
      outline: none

  &.fluid
    @extends $inputs-fluid

  &.error
    @extends $inputs-error

  input, .dummy
    flex: 1
    height: 100%
    min-width: 0
    padding: 1em 0
    border-width: 0

    &::placeholder, .placeholder
      @extends $inputs-placeholder
      opacity: 1

  .dummy
    min-height: 3.188em

  .icon
    width: 1em
    margin-right: .8em
    color: $dark-gray-a

.pui--input--date
  cursor: pointer

  &.show .calendar
    transform: scale(1)
    opacity: 1

  .calendar
    position: absolute
    left: 0
    top: 100%

    transition: transform .2s ease, opacity .2s ease
    transform: scale(0)
    opacity: 0

.pui--input--list
  @extends $inputs-container
  list-style: none
  padding: 0
  margin: 0

  &.fluid
    @extends $inputs-fluid

  .option
    position: relative
    min-height: 3.188em
    padding: 1em

    &:not(:last-child)
      border-bottom: 1px solid $light-gray-b

    &:not(.active)
      cursor: pointer

    &.active
      background-color: $light-gray-a

      .check
        transform: translate3d(0, -50%, 0) scale(1)

    .label
      margin-left: 2em

    .check
      position: absolute
      left: 1em
      top: 50%

      transition: transform .3s cubic-bezier(0.68, -0.55, 0.265, 1.55)
      transform: translate3d(0, -50%, 0) scale(0)

      .icon
        width: 1em
