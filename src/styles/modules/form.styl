.pui--form
  width: 50em
  padding: 1em
  margin: 0 auto

  &.panel
    padding: 2em 4em
    background: white
    border-radius: 4px
    box-shadow: 0 30px 40px 0 alpha($dark-blue-b, 0.20)

  &.fluid
    width: 100%

  & > *:not(:last-child)
    margin-bottom: 1em

.pui--form__field
  &.error
    & > .label
      &, .pui--label
        color: $red-a

  & > .label
    .message
      font-size: .9em
      &:before
        content: "\00a0 "

.pui--form__field-set
  display: flex

  & > *
    flex: 1

    &:not(:last-child)
      margin-right: 1em
