.pui--form
  width: 30em
  padding: 1em
  margin: 0 auto

  & > *:not(:last-child)
    margin-bottom: 1em

.pui--form__field
  &.error
    .label
      color: $red-a

  .label
    size = .85em
    margin-bottom: .4em
    font-size: size
    color: $dark-gray-a

    .body
      text-transform: uppercase
      letter-spacing: size * .2

    .message
      &:before
        content: "\00a0 "