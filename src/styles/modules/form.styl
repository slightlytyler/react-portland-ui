.pui--form
  width: 50em
  padding: 1em
  margin: 0 auto

  &.fluid
    width: 100%

  & > *:not(:last-child)
    margin-bottom: 1em

.pui--form__field
  &.error
    & > .label
      color: $red-a

  & > .label
    size = .85em
    margin-bottom: .4em
    font-size: size
    color: $dark-gray-a

    .body
      text-transform: uppercase
      letter-spacing: size * .2

    .message
      &:before
        content: "\00a0 "

.pui--form__field-set
  display: flex

  & > *
    flex: 1

    &:not(:last-child)
      margin-right: 1em