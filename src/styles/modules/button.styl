.pui--button
  size = .9em
  position: relative
  padding: 1em 4em
  font-size: size
  letter-spacing: size * .1
  text-transform: uppercase
  border-width: 2px
  border-style: solid
  border-radius: 4px
  cursor: pointer
  user-select: none

  color: white
  background-color: $highlight-color
  border-color: $highlight-color

  &:after
    content: ''
    position: absolute
    left: 0
    top: 0
    width: 100%
    height: 100%
    background-color: alpha(black, 0.075)

    transition: opacity .1s ease
    opacity: 0

  &:focus
    outline: none
    box-shadow: 0 10px 25px 0 alpha($dark-blue-a, 0.15)

  &:hover:after
    opacity: 1

  &:active
    box-shadow: 0 7px 20px 0 alpha($dark-blue-a, 0.17)

    &:after
      background-color: alpha(black, 0.15)
      opacity: 1

  &.ghost
    color: $dark-blue-a
    background-color: transparent
    border-color: $light-gray-b

    &:hover
      background-color: alpha($light-gray-b, .2)

    &:active
      background-color: $light-gray-b

  &.fluid
    width: 100%

  &.big
    padding: 1.25em 5em
    font-size: 1em
    text-transform: none