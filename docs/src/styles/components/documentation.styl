.documentation
  background-color: white
  border: 1px solid $light-gray-b
  border-radius: 7px

  & > *
    padding: 1.5em

    &:not(:last-child)
      border-bottom: 1px solid $light-gray-b

  & > .header
    display: flex
    justify-content: space-between
    align-items: center

    .name
      font-size: 2em
      font-weight: bold
      color: inherit
      text-decoration: none

    .github .link
      color: $blue-a

      &:hover, &:active
        color: $blue-b

  & > .description
    color: $dark-gray-b

.documentation__prop-types
  .header
    margin-bottom: 1em
    font-size: 1.25em
    font-weight: bold

  .table
    box-shadow: none
    border: 1px solid $light-gray-b

    .row
      background-color: white

    .cell
      border-right-width: 0

      &.name
        color: darken(#a6e22e, 45%)

      &.type
        color: saturation(darken(#ae81ff, 30%), 40%)

      &.default .required
        color: $dark-gray-b

      &.description
        font-weight: 300

.documentation__examples
  font-family: inherit

  blockquote
    font-weight: 300

  .item
    position: relative
    margin-bottom: 3em

    &.expanded
      .example, .code
        padding: 1rem

      .example
        border-color: $dark-gray-a

    .example
      display: flex
      align-items: center
      border: 1px solid transparent
      border-bottom-width: 0
      border-top-left-radius: 7px
      border-top-right-radius: 7px

      & > *:not(:last-child)
        margin-right: 1em

    .expand-button
      position: absolute
      right: 0.5em
      top: -1.9rem
      transform: translateY(-50%)
      font-size: .5rem
      font-weight: 300
      cursor: pointer
