.page__side-bar
  position: fixed
  left: 0
  top: 0
  width: 17.5em
  height: 100%
  color: white
  background-color: $dark-blue-b

  .header, .search
    border-bottom: 1px solid $dark-blue-a

  .header, .search, .list .item .body
    padding: 1em

    .title, .by
      margin-top: 0
      font-weight: normal

    .title
      margin-bottom: .15em
      font-size: 1.5em

      a
        text-decoration: none
        color: inherit

    .by
      display: flex
      justify-content: flex-start
      align-items: center
      margin-bottom: 0
      font-size: 1em
      font-weight: 300

      .label
        color: $dark-gray-b

      .logo
        width: 6em
        margin-left: .5em

        .image
          width: 100%

  .search .input, .list .item
    color: alpha(white, 0.65)

  .search
    .input
      padding: 0
      border-width: 0

  .list
    .item
      a
        color: inherit
        text-transform: capitalize
        text-decoration: none

      .body
        display: flex
        justify-content: flex-start
        align-items: center
        cursor: pointer

        &:hover, &.active
          color: white
          background-color: alpha(black, 0.3)

        &.active
          opacity: 1

          & + .dropdown
            display: block;

        .icon
          height: 1em
          margin-right: 1em
          opacity: .7

      .dropdown
        display: none
        padding-left: 4em
        margin-top: .5em

        .element
          display: block
          margin-bottom: 1em

          &:hover, &.active
            color: white
